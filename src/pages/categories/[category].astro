---
import type { ImageMetadata } from "astro"
import { getCollection } from "astro:content"
import { Image } from "astro:assets"

import { formatNumberToCurrency } from "../../scripts/currency"

import BaseLayout from "../../layouts/BaseLayout.astro"

const {category} = Astro.params

if (category == null) Astro.redirect('/404')

const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/**/*.{jpeg,jpg,png,gif,webp}",
);

const categories = await getCollection("categories")
const products = await getCollection("products")

const collectionCategory = categories.find(c => c.id === category)
const filteredProducts = products
  .filter(product => product.data.category === collectionCategory?.data.name)
  .map(product => {
    return {
      ...product.data,
      id: product.id,
      price: formatNumberToCurrency(product.data.price),
      imageComponent: images[product.data.image] ?? null 
    }
  })
---

<BaseLayout>
  <div class="product-container">
    <h1>{collectionCategory?.data.name}</h1>
    <div class="product-gallery">
      {filteredProducts.map(product => {
        return (
          <a class="product" href={`/products/${product.id}`}>
            <div class="product-image">
              <Image src={product.imageComponent()} alt={product.name}/>
            </div>
            <div class="product-name">
              {product.name}
            </div>
            <div class="product-price">
              {product.price}
            </div>
          </a>
        )
      })}
    </div>
  </div>
</BaseLayout>

<style>
  .product-container {
    padding: 1.5rem 2rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  h1 {
    margin: 0;
    color: var(--color-text-ink-400);
    font-size: 1.75rem;
  }

  .product-gallery {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: 20rem;
    gap: 1rem;
  }

  .product {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    text-decoration: none;
  }

  .product-image {
    border-radius: 4px;
    height: 15rem;
    overflow: hidden;
  }

  .product-image > img {
    width: 100%;
    height: inherit;
    object-fit: cover;
    margin-bottom: 0.5rem;
  }

  .product-price {
    font-size: smaller;
    color: var(--color-text-ink-300);
  }

  .product-name {
    font-size: medium;
    color: var(--color-text-ink-400);
  }
</style>