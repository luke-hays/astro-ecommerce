---
import type {ImageMetadata} from 'astro';
import {getCollection} from "astro:content"
import {Image} from 'astro:assets';

import {formatNumberToCurrency} from '../../scripts/currency';

import BaseLayout from "../../layouts/BaseLayout.astro";
import QuantityAdder from "../../components/product/QuantityAdder.astro";

const {slug} = Astro.params

const products = await getCollection('products')
const product = products.find(product => product.data.name === slug)

if (!product) return Astro.redirect("/404")

const images = import.meta.glob<{ default: ImageMetadata }>('/src/assets/**/*.{jpeg,jpg,png,gif}')
if (!images[product.data.image]) throw new Error(`"${product.data.image}" does not exist in glob: "src/assets/**/*.{jpeg,jpg,png,gif}"`);

const formattedPrice = formatNumberToCurrency(product.data.price)
---

<script>
  import '@shoelace-style/shoelace/dist/components/button/button.js'

  import { quantity } from '../../stores/productCounter'
</script>

<BaseLayout>
  <div class="product-container">
    <div class="img-container">
      <Image src={images[product.data.image]()} alt={product.data.name}/>
    </div>
    <section>
      <h2>{product.data.name}</h2>
      <div>{formattedPrice}</div>
      <p>{product.data.description}</p>
      <QuantityAdder />
      <sl-button>Add to cart</sl-button>
    </section>
  </div>
</BaseLayout>

<style>
  img {
    max-width: 100%;
    max-height: 100%;
    object-fit: cover;
  }

  section {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    margin: 0 1rem;
  }

  h2 {
    margin: 0;
  }

  p {
    margin: 0;
  }

  .img-container {
    border-radius: 8px;
    overflow: hidden;
    margin: 1rem;
  }

  .product-container {
    display: flex;
    flex-direction: column;
    height: 100%;
  }
</style>