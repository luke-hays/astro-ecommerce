---
import { getCollection } from "astro:content";
import { Image } from "astro:assets";

import BaseLayout from "../../layouts/BaseLayout.astro";
import QuantityAdder from "../../components/product/ProductCounter.astro";
import Breadcrumb from "../../components/shared/Breadcrumb.astro";

import { getImages } from "../../scripts/images";

// The product name is the slug
const { slug } = Astro.params;

const products = await getCollection("products");
const product = products.find((product) => product.id === slug);

if (!product) return Astro.redirect("/404");

// The image is saved from the CMS as a path to the assets folder in src
// Since this is dynamic we need to handle importing using that path name
// Astro luckily provides some helpers for this
const images = getImages()

if (!images[product.data.image])
  throw new Error(
    `"${product.data.image}" does not exist in glob: "src/assets/**/*.{jpeg,jpg,png,gif,webp}"`,
  );

const categories = await getCollection("categories")
const category = categories.find(category => category.data.name === product.data.category)

// Probably want to warn sentry on a misconfiguration
const routeName = category?.data?.name ?? 'Home'
const routePath = category?.id ? `/categories/${category.id}` : "/"
---

<script>
  import "@shoelace-style/shoelace/dist/components/button/button.js";

  import { quantity } from "../../stores/productCounter";
  import { cart } from "../../stores/cart";
  import { updateQuantityInCart } from "../../scripts/cart";

  const addToCartButton = document.getElementById("add-to-cart");
  const product = addToCartButton?.dataset.product;

  // Straight forward - when the user clicks add, we get the cart, our new quantity, then update the cart accordingly
  if (addToCartButton && product) {
    addToCartButton.addEventListener("click", () => {
      const currentCart = cart.get();
      const newQuantity = quantity.get();
      const updatedCart = updateQuantityInCart(
        currentCart,
        product,
        newQuantity,
      );

      cart.set(updatedCart);
    });
  }
</script>

<BaseLayout>
  <div class="product-container">
    <Breadcrumb routePath={routePath} routeName={routeName} />
    <div class="img-container">
      <Image src={images[product.data.image]()} alt={product.data.name} />
    </div>
    <section>
      <h2>{product.data.name}</h2>
      <div>{product.data.price}</div>
      <p>{product.data.description}</p>
      <QuantityAdder />
      <sl-button data-product={product.data.name} id="add-to-cart"
        >Add to cart</sl-button
      >
    </section>
  </div>
</BaseLayout>

<style>
  img {
    max-width: 100%;
    height: 100%;
    object-fit: cover;
  }

  section {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  h2 {
    margin: 0;
  }

  p {
    margin: 0;
  }

  .img-container {
    border-radius: 8px;
    overflow: hidden;
    height: 30rem;
    width: 25rem;
  }

  .product-container {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    height: 100%;
    margin: 1.5rem 2rem;
  }
</style>
