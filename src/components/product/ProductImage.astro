---
import { Image } from "astro:assets";

const { product } = Astro.props;
---

<div class="img-container">
  <Image src={product.image()} alt={product.name} />
</div>

<style>
  img {
    max-width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .img-container {
    border-radius: 8px;
    overflow: hidden;
    height: 30rem;
    width: 100%;
    max-width: 25rem;
  }

  @media (min-width: 768px) {
    .img-container {
      width: 100%;
      max-width: 35rem;
      height: 40rem;
    }
  }
</style>
